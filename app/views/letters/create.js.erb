
<% if @letter.errors.any? %>
  // handle validation errors later
<% else %>
  var lettersContainer = document.querySelector('.letters');
  lettersContainer.insertAdjacentHTML('beforeend', '<%= j render "letter", letter: @letter, user_is_letters_author: true %>');

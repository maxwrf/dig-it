<div class="container align-content-center text-center ">
  <h1 class="my-3">Your Profil <%=@user.first_name %>!</h1>
  <div class="card align-items-center text-center m-auto " style="width: 30rem;">
    <ul class="list-group list-group-flush">
      <li class="list-group-item">First name:</li>
      <li class="list-group-item"><%= @user.first_name %></li>
    </ul>
  </div>
  <div class="card align-items-center text-center m-auto" style="width: 30rem;">
    <ul class="list-group list-group-flush">
      <li class="list-group-item">Last name:</li>
      <li class="list-group-item"><%= @user.last_name %></li>
    </ul>
  </div>
  <div class="card align-items-center text-center m-auto" style="width: 30rem;">
    <ul class="list-group list-group-flush">
      <li class="list-group-item">Your email:</li>
      <li class="list-group-item"><%= @user.email %></li>
    </ul>
  </div>
  <div class="card align-items-center text-center m-auto" style="width: 30rem;">
    <ul class="list-group list-group-flush">
      <li class="list-group-item">Password:</li>
      <li class="list-group-item"><%= link_to "Change your password", edit_user_registration_path %></li>
    </ul>
  </div>
  <div class="align-items-center text-center m-3">
    <a class="btn btn-secondary" href="dashboard/edit" role="button">Edit</a>
  </div>
 </div>

